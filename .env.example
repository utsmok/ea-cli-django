# =============================================================================
# Environment Configuration for Easy Access Platform
# =============================================================================
# Copy this file to .env and update with your values

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENV=development
# Options: development, staging, production

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DEBUG=True
# Set to False in production!

SECRET_KEY=change-me-in-production-use-python-secrets
# Generate a secure key with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'

ALLOWED_HOSTS=localhost,127.0.0.1,::1
# In production, set to your actual domain(s)
# Example: ALLOWED_HOSTS=ea-platform.example.com,www.ea-platform.example.com

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://admin:dev_password@db:5432/copyright_db
# For local development (without Docker):
# DATABASE_URL=postgres://admin:dev_password@localhost:5432/copyright_db
# For production, use a strong password and separate database user

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
# For local development (without Docker):
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# External API Configuration
# -----------------------------------------------------------------------------
# Canvas LMS API (for PDF downloads)
CANVAS_API_URL=https://utwente.instructure.com/api/v1
CANVAS_API_TOKEN=your-canvas-api-token-here
# Or use legacy name:
# CANVAS_API_KEY=your-canvas-api-token-here

# Osiris (University of Twente course/teacher data)
OSIRIS_BASE_URL=https://utwente.osiris-student.nl
# OSIRIS headers are configured in settings.py
# Override if needed:
# OSIRIS_OSIRIS_CLIENT_TYPE=web
# OSIRIS_RELEASE_VERSION=c0d3b6a1d72bf1610166027c903b46fc10580f30

# -----------------------------------------------------------------------------
# Cache Settings (Optional)
# -----------------------------------------------------------------------------
REDIS_CACHE_STATS=True
# Enable cache statistics (disable in production for performance)

FILE_EXISTS_TTL_DAYS=7
# Days to cache file existence checks

FILE_EXISTS_RATE_LIMIT_DELAY=0.05
# Delay between file existence check requests (seconds)

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------
# The following are automatically configured in production based on ENV=production:
# - SECURE_SSL_REDIRECT=True
# - SESSION_COOKIE_SECURE=True
# - CSRF_COOKIE_SECURE=True
# - SECURE_HSTS_SECONDS=31536000
# - CONN_MAX_AGE=600

# Password requirements (enforced via Django validators):
# - Minimum length: 12 characters
# - Cannot be too similar to username
# - Cannot be a common password
# - Cannot be entirely numeric

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
