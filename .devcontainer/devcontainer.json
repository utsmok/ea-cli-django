{
  "name": "Copyright Platform",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "bradlc.vscode-tailwindcss",
        "otovo-oss.htmx-tags"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/app/.venv/bin/python",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "python src/manage.py migrate",
  "forwardPorts": [8000]
}
